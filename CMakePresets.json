{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "hidden": true,
            "name": "ninja-debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_VERBOSE_MAKEFILE": false,
                "CMAKE_POLICY_DEFAULT_CPM0123": "NEW"
            }
        },
        {
            "hidden": false,
            "name": "msvc-ninja",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "BUILD_TESTS": true,
                "ENABLE_CLANG_TIDY": true
            },
            "binaryDir": "${sourceDir}/build/msvc",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "gcc",
            "displayName": "GCC 12.2.0 arm-none-eabi",
            "description": "Using compilers:",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/install/${presetName}",
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "BUILD_TESTS": true,
                "ENABLE_CLANG_TIDY": true
            }
        }
    ]
}